{
  "root": "packages/oidc-helper",
  "sourceRoot": "packages/oidc-helper/src",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/oidc-helper",
        "main": "packages/oidc-helper/src/index.ts",
        "tsConfig": "packages/oidc-helper/tsconfig.lib.json",
        "assets": ["packages/oidc-helper/*.md"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs oidc-helper {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/oidc-helper/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/oidc-helper"],
      "options": {
        "jestConfig": "packages/oidc-helper/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
